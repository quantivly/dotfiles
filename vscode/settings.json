{
  // Python - direnv compatibility
  // CRITICAL: direnv handles virtual environment activation automatically via .envrc
  // Setting this to false prevents VSCode from interfering with direnv
  "python.terminal.activateEnvironment": false,

  // Python - Use project-local .venv by default
  "python.defaultInterpreterPath": "${workspaceFolder}/.venv/bin/python",

  // Python - Formatting
  "[python]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "charliermarsh.ruff"
  },

  // Python - Testing
  "python.testing.pytestEnabled": true,

  // File associations for dotfiles-managed configurations
  "files.associations": {
    ".envrc": "shellscript",
    ".python-version": "plaintext",
    ".mise.toml": "toml"
  }
}
